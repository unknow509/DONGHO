
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<li style="list-style:none;" class="col-sm-12">
    <a style="text-decoration:none;" href="@Url.Action("Details","DONGHO",new {id=Model.MaSP })" class="Model-link" title="">
        <div class="bannerBox">
            <img src="~/Images/@Model.Anhbia" class="Model-img" title="" alt="@Model.TenSP" width="70%" height="80%" />

            <div style="text-align:justify">
                <h5 style="text-align:center">@Model.TenSP</h5>
